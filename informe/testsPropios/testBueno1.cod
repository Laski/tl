function id(x){
	return x
}

function fact(x){
	if x <= 0 then {
		return 1
	} else {
		res = 1
		while x!=0 {
			res = x*res
			x = x-1
		}
		return res
	}
}

plot (id(x), fact(x)) for x=1..1..6

